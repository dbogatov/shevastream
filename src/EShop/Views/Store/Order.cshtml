@model int

@{
	ViewData["Title"] = "Замовлення";
}

@section heading {
	<!-- begin:heading -->
	<div class="heads" style="background: url(/images/bg.jpg) center center;">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2><span>//</span> ЗАМОВЛЕННЯ</h2>
				</div>
			</div>
		</div>
	</div>
	<!-- end:heading -->
}

<!-- begin:content -->
<div class="page-content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<ol class="breadcrumb">
					<li><a asp-controller="Store" asp-action="Index">Головна</a></li>
					<li><a asp-controller="Store" asp-action="Cart">Кошик</a></li>
					<li class="active">Замовлення</li>
				</ol>
			</div>
		</div>

		<div class="row confirm">
			<div class="col-md-12">
				<form class="form-horizontal" role="form" id="oderForm" novalidate>
					<h3 class="text-center">Замовлення</h3>
					<hr>
					
					<div class="form-group">
						<label class="col-sm-3 control-label" for="name">Ім'я *</label>
						<div class="col-sm-6">
							<input type="text" class="form-control" id="name" placeholder="Ім'я" required>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label" for="email">Email</label>
						<div class="col-sm-6">
							<input type="email" class="form-control" placeholder="Email" id="email">
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label" for="phone">Номер телефону *</label>
						<div class="col-sm-6">
							<div class="input-group">
								<span class="input-group-addon" id="phoneNumAddon">+38</span>
								<input type="tel" class="form-control" id="phone" aria-describedby="phoneNumAddon" placeholder="050 866 22 22" required>
							</div>
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-3 control-label" for="shipmentMethod">Спосіб доставки</label>
						<div class="col-sm-6">
							<select class="form-control" id="shipmentMethod" required>
								<option value="1">Корпус КНУ ім. Т. Шевченко - безкоштовно</option>
								<option value="2">По Києву - 30 грн</option>
								<option value="3">По Україні - Новою поштою</option>
							</select>
						</div>
					</div>
					
					<div class="form-group" id="addressGroup" hidden>
						<label class="col-sm-3 control-label" for="address">Адреса доставки</label>
						<div class="col-sm-6">
							<textarea class="form-control" id="address" rows="3" placeholder="Адреса доставки" required></textarea>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label" for="paymentMethod">Спосіб оплати</label>
						<div class="col-sm-6">
							<select class="form-control" id="paymentMethod" required>
								<option value="1">Готівкою при отриманні товару</option>
								<option value="2">Безготівковий розрахунок (на карту Приват банка)</option>
							</select>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label" for="comment">Коментар</label>
						<div class="col-sm-6">
							<textarea class="form-control" id="comment" rows="8" placeholder="Не обов'язкове повідомлення"></textarea>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-md-offset-3 col-md-2">
								<a asp-controller="Store" asp-action="Cart" class="btn btn-block btn-warning">Назад у кошик</a>
							</div>
							<div class="col-md-2">
								<h4 style="text-align: center;">Загальна вартість: @(Model) UAH</h4>
							</div>
							<div class="col-md-2">
								<button type="submit" id="putOrderBtn" class="btn btn-block btn-purple">Замовити</button>
							</div>
						</div>
					</div>
					
					<div class="col-sm-offset-3 col-sm-6">
						<div class="alert alert-danger" role="alert" id="orderValidationAlert" hidden>
							<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
							<span class="sr-only">Помилка:</span>
							Всі поля з позначкою * - обов'язкові.
						</div>
					</div>
					
				</form>
			</div>
		</div>
	</div>
</div>
<!-- end:content -->

@section scripts {
	
	<script>
		var globalActive = "Order";
	</script>
	
	<script src="/js/order.js"></script>
}