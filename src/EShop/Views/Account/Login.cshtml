@{
	ViewData["Title"] = "Login";
}

@section heading {
	<!-- begin:heading -->
	<div class="heads" style="background: url(/images/bg.jpg) center center;">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2><span>//</span> Login</h2>
				</div>
			</div>
		</div>
	</div>
	<!-- end:heading -->
}

<!-- begin:content -->
<div class="page-content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<ol class="breadcrumb">
					<li><a asp-controller="Store" asp-action="Index">Головна</a></li>
					<li class="active">Login</li>
				</ol>
			</div>
		</div>

		<div class="row confirm">
			<div class="col-md-12">
				<form class="form-horizontal" role="form" id="loginForm" asp-controller="Account" asp-action="Authenticate" asp-route-returnurl="@(Model.ReturnUrl)" novalidate>
					<h3 class="text-center">Login</h3>
					<hr>
					
					<div class="form-group">
						<label class="col-sm-3 control-label" for="password">Secret</label>
						<div class="col-sm-6">
							<input type="password" name="password" class="form-control" id="password" required>
						</div>
					</div>
					
					<div class="form-group">
						<div class="col-sm-6 col-sm-offset-3">
							<div class="g-recaptcha" data-sitekey="6LfYAiETAAAAAIPHSA0zKXysAQ_hpXmWoAFOfLcb"></div>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-sm-6 col-sm-offset-3">
								<button type="submit" id="loginBtn" class="btn btn-block btn-purple">Submit</button>
							</div>
						</div>
					</div>
					
					@if (Model.IsError)
					{
						<div class="col-sm-offset-3 col-sm-6">
							<div class="alert alert-danger" role="alert">
								<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
								<span class="sr-only">Помилка:</span>
								@(Model.Error)
							</div>
						</div>
					}
					
				</form>
			</div>
		</div>

	</div>
</div>
<!-- end:content -->

@section scripts {
	<script src='https://www.google.com/recaptcha/api.js'></script>
	
	<script>
		var globalActive = "";
	</script>
	
}