@using Newtonsoft.Json

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge">
		<meta name="description" content="КНУ Шевченка ShevaStream магазин">
		<meta name="keywords" content="shevastream КНУ Шевченка">
		<meta name="author" content="Dmytro Bogatov">
		<meta property="fb:admins" content="100001783609504"/>
		<link rel="shortcut icon" href="/images/favicons/favicon.ico">

		<!-- favicons -->
		<link rel="apple-touch-icon" sizes="57x57" href="/images/favicons/images/favicons/apple-icon-57x57.png">
		<link rel="apple-touch-icon" sizes="60x60" href="/images/favicons/images/favicons/apple-icon-60x60.png">
		<link rel="apple-touch-icon" sizes="72x72" href="/images/favicons/apple-icon-72x72.png">
		<link rel="apple-touch-icon" sizes="76x76" href="/images/favicons/apple-icon-76x76.png">
		<link rel="apple-touch-icon" sizes="114x114" href="/images/favicons/apple-icon-114x114.png">
		<link rel="apple-touch-icon" sizes="120x120" href="/images/favicons/apple-icon-120x120.png">
		<link rel="apple-touch-icon" sizes="144x144" href="/images/favicons/apple-icon-144x144.png">
		<link rel="apple-touch-icon" sizes="152x152" href="/images/favicons/apple-icon-152x152.png">
		<link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-icon-180x180.png">
		<link rel="icon" type="image/png" sizes="192x192"  href="/images/favicons/android-icon-192x192.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="96x96" href="/images/favicons/favicon-96x96.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png">
		<meta name="msapplication-TileColor" content="#ffffff">
		<meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
		<meta name="theme-color" content="#ffffff">

		<title>@ViewData["Title"] - Sheva Stream</title>

		<!-- Bootstrap core CSS -->
		<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="/lib/components-font-awesome/css/font-awesome.min.css" rel="stylesheet">
		<link href="/lib/animate.css/animate.min.css" rel="stylesheet">

		<environment names="Development">
			<!-- Custom styles for this template -->
			<link href="/css/style.css" rel="stylesheet">
			<link href="/css/responsive.css" rel="stylesheet">
		</environment>

		<environment names="Staging,Production">
			<link href="/css/min/style.min.css" rel="stylesheet">
			<link href="/css/min/responsive.min.css" rel="stylesheet">
		</environment>

		@RenderSection("styles", required: false)

		<!-- Begin Cookie Consent plugin by Silktide - http://silktide.com/cookieconsent -->
		<script type="text/javascript">
			window.cookieconsent_options = {"message":"Цей сайт використовує файли cookie","dismiss":"Добре!","learnMore":"Що це таке?","link":"/home/privacy","theme":"light-bottom"};
		</script>

	</head>
	<body>
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand visible-xs" asp-controller="Home" asp-action="Index">Sheva Stream</a>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav nav-left">
						@if (Context.User.Identity.IsAuthenticated)
						{
							<li id="Logout"><a href="/api/Secure/Logout" target="_blank">Logout</a></li>
						}
						
						<li class="@(ViewBag.Current == "Index" ? "active" : "")" id="Index"><a asp-controller="Home" asp-action="Index">Головна</a></li>
						<li class="@(ViewBag.Current == "Profile" ? "active" : "")" id="Profile"><a asp-controller="Home" asp-action="Profile">Про нас</a></li>
						<li class="@(ViewBag.Current == "Product" ? "active" : "")" id="Product"><a asp-controller="Store" asp-action="Product">Продукція</a></li>
					</ul>
					<a asp-controller="Home" asp-action="Index" class="logo visible-lg visible-md"><img src="/images/logo.jpg" alt="Sheva Stream Logo"></a>
					<div id="brand" class="visible-lg visible-md">&nbsp;</div>
					<ul class="nav navbar-nav nav-right">
						<li class="@(ViewBag.Current == "Blog" ? "active" : "")" id="Blog"><a asp-controller="Blog" asp-action="Index">Блог</a></li>
						<li class="@(ViewBag.Current == "Contact" ? "active" : "")" id="Contact"><a asp-controller="Home" asp-action="Contact">Контакти</a></li>
						
						<li class="@(ViewBag.Current == "Cart" ? "active" : "")" id="Cart">
							<a asp-controller="Store" asp-action="Cart">
								Кошик <span id="cartItemsNumber"></span>
							</a>
						</li>		
					</ul>

				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>

		@RenderSection("heading", required: false)

		@RenderBody()
	   
		<div id="footerFix" class="page-content" style="padding: 0;"></div>
	   
		<!-- begin:footer -->
		<div id="footer">
			<div class="container">
				<div class="row">
					
					<div class="col-md-3">
						<a asp-controller="Home" asp-action="FAQ" class="btn btn-success btn-block">Оплата та доставка</a>
						<br>
						<span style="font-size: 18pt;"><i class="fa fa-clock-o"></i> 8:00 – 20:00</span>
					</div>
					
					<div class="col-md-6">
						<h3>SHEVA STREAM</h3>

						<ul class="list-unstyled social-icon">
							<li><a rel="nofollow" href="https://www.facebook.com/shevastream" title="Facebook" class="icon-facebook"><span><i class="fa fa-facebook-square"></i></span></a></li>
							<li><a rel="nofollow" href="https://vk.com/shevastream" title="VK" class="icon-vk"><span><i class="fa fa-vk"></i></span></a></li>
							<li><a rel="nofollow" href="https://www.instagram.com/shevastream/" title="Instagram" class="icon-instagram"><span><i class="fa fa-instagram"></i></span></a></li>
						</ul>

						<div class="sitemap">
							<ul>
								<li><a asp-controller="Home" asp-action="Index">Головна</a></li>
								<li><a asp-controller="Store" asp-action="Product">Продукція</a></li>
								<li><a asp-controller="Home" asp-action="Contact">Контакти</a></li>
								<li><a asp-controller="Home" asp-action="Privacy">Політика Конфіденційності</a></li>
							</ul>
						</div>
					</div>
					<div class="col-md-3">
						<a id="callMeBackBtn" data-toggle="modal" data-target="#callMeBackModal" class="btn btn-warning btn-block">Передзвоніть мені</a>
					</div>
				</div>
			</div>
		</div>
		<!-- end:footer -->
		<!-- begin:copyright -->
		<div id="copyright">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<small>&copy; @Html.DisplayTextFor(model => DateTime.Now.Year) - Polly Team @await Component.InvokeAsync("VersionHash")</small>
					</div>
				</div>
			</div>
		</div>
		<!-- end:copyright -->
		
		<!-- modal -->
		<div class="modal fade" tabindex="-1" role="dialog" id="callMeBackModal">
			<div class="modal-dialog">
				<div class="modal-content">
					<form class="form-horizontal" id="callBackForm">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							<h4 class="modal-title">Замовити дзiнок</h4>
						</div>
						<div class="modal-body">
							
							<div id="requestCallBackBody">
								<div class="form-group">
									<label class="col-sm-3 control-label" for="callBackPhone">Номер телефону *</label>
									<div class="col-sm-6">
										<div class="input-group">
											<span class="input-group-addon" id="callBackPhoneNumAddon">+38</span>
											<input type="tel" class="form-control" id="callBackPhone" aria-describedby="callBackPhoneNumAddon" placeholder="050 866 22 22" autofocus required>
										</div>
									</div>
								</div>
							</div>
							
							<div id="responseCallBackBody" hidden>
								
								<div class="row">
									<div class="col-md-3" style="text-align: center;">
										<i class="fa fa-check-square-o fa-5x" style="font-size: 50pt; color: lightgreen;" ></i>
									</div>
									<div class="col-md-9">
										<div class="heading-title">
											<h3 style="text-align: center; font-size: 30pt;">Дякуємо!</h3>
											<h4>Ми отримали Ваш запит. Зв'яжемося з вами найближчим часом.</h4>
										</div>
									</div>
								</div>
								
							</div>
						
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Скасувати</button>
							<button type="button" class="btn btn-primary" id="confirmCallBackBtn">Замовити</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		
		
		<!-- Bootstrap core JavaScript
		================================================== -->
		<!-- Placed at the end of the document so the pages load faster -->
		
		<!-- Inline version of analytic.js -->
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-74110359-1', 'auto');
			ga('send', 'pageview');
		</script>

		
		<script src="/lib/jquery/dist/jquery.min.js"></script>
		<script defer src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
		<script defer src="/lib/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
		<script defer src="/lib/jquery.cookie/jquery.cookie.js"></script>
		<script defer src="/lib/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
		<script defer src="/lib/cookieconsent/build/cookieconsent.min.js"></script>
		
		<environment names="Development">
			<script defer src="/js/script.js"></script>
			<script defer src="/js/site.js"></script>
			<script defer src="/js/cart.js"></script>
			<script defer src="/js/blog.js"></script>

			<script defer src="/js/order.js"></script>
			<script defer src="/js/contact.js"></script>
			<script defer src="/js/detail.js"></script>
		</environment>

		<environment names="Staging,Production">
			<script defer src="/js/site.min.js"></script>
		</environment>

		@RenderSection("scripts", required: false)
	</body>
</html>
