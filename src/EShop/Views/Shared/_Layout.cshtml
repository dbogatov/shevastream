<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
		<meta name="description" content="ShevaStream internet shop">
		<meta name="keywords" content="shevastream, sheva, stream">
		<meta name="author" content="Dmytro Bogatov">
		<link rel="shortcut icon" href="/images/favicon.png">

		<title>@ViewData["Title"] - Sheva Stream</title>

		<!-- Bootstrap core CSS -->
		<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">

		<!-- Custom styles for this template -->
		<link href="/css/style.css" rel="stylesheet">
		<link href="/css/responsive.css" rel="stylesheet">

		@RenderSection("styles", required: false)

		<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		  <script src="/lib/html5shiv/dist/html5shiv.js"></script>
		  <script src="/lib/respond/dest/respond.src.js"></script>
		<![endif]-->
	</head>
    <body>
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand visible-xs" asp-controller="Home" asp-action="Index">Sheva Stream</a>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav nav-left">
						<li id="Index"><a asp-controller="Home" asp-action="Index">Головна</a></li>
						<li id="Profile"><a asp-controller="Home" asp-action="Profile">Про нас</a></li>
						<li id="Detail"><a asp-controller="Home" asp-action="Detail">Продукція</a></li>
					</ul>
					<a asp-controller="Home" asp-action="Index" class="logo visible-lg visible-md"><img src="/images/logo.jpg" alt="dodolan manuk responsive catalog themes"></a>
					<div id="brand" class="visible-lg visible-md">&nbsp;</div>
					<ul class="nav navbar-nav nav-right">
						<li id="FAQ"><a asp-controller="Home" asp-action="FAQ">Оплата і доставка</a></li>
						<li id="Contact"><a asp-controller="Home" asp-action="Contact">Контакти</a></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Мова <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><a href="#">Укр</a></li>
								<li><a href="#">Рус</a></li>
							</ul>
						</li>
					</ul>

				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>

		@RenderSection("heading", required: false)

		@RenderBody()
       
	   <div id="footerFix" class="page-content"></div>
	   
		<!-- begin:footer -->
		<div id="footer">
			<div class="container">
				<div class="row">
					
					<div class="col-md-3">
						<a asp-controller="Home" asp-action="FAQ" class="btn btn-success btn-block">Оплата та доставка</a>
						<br>
						<span style="font-size: 18pt;"><i class="fa fa-clock-o"></i> 8:00 – 20:00</span>
					</div>
					
					<div class="col-md-6">
						<h3>SHEVA STREAM</h3>

						<ul class="list-unstyled social-icon">
							<li><a href="https://www.facebook.com/shevastream" rel="tooltip" title="Facebook" class="icon-facebook"><span><i class="fa fa-facebook-square"></i></span></a></li>
							<li><a href="https://vk.com/shevastream" rel="tooltip" title="VK" class="icon-vk"><span><i class="fa fa-vk"></i></span></a></li>
							<li><a href="https://www.instagram.com/shevastream/" rel="tooltip" title="Instagram" class="icon-instagram"><span><i class="fa fa-instagram"></i></span></a></li>
						</ul>

						<div class="sitemap">
							<ul>
								<li><a asp-controller="Home" asp-action="Index">Головна</a></li>
								<li><a asp-controller="Home" asp-action="Detail">Продукція</a></li>
								<li><a asp-controller="Home" asp-action="Contact">Контакти</a></li>
							</ul>
						</div>
					</div>
					<div class="col-md-3">
						<a id="callMeBackBtn" data-toggle="modal" data-target="#callMeBackModal" class="btn btn-warning btn-block">Передзвоніть нам</a>
					</div class="col-md-3">
				</div>
			</div>
		</div>
		<!-- end:footer -->
		<!-- begin:copyright -->
		<div id="copyright">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<small>&copy; @Html.DisplayTextFor(model => DateTime.Now.Year) - Polly Team</small>
					</div>
				</div>
			</div>
		</div>
		<!-- end:copyright -->
		
		<!-- modal -->
		<div class="modal fade" tabindex="-1" role="dialog" id="callMeBackModal">
			<div class="modal-dialog">
				<div class="modal-content">
					<form class="form-horizontal" role="form" id="callBackForm">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							<h4 class="modal-title">Замовити дзiнок</h4>
						</div>
						<div class="modal-body">
							
							<div id="requestCallBackBody">
								<div class="form-group">
									<label class="col-sm-3 control-label" for="callBackPhone">Номер телефону *</label>
									<div class="col-sm-6">
										<div class="input-group">
											<span class="input-group-addon" id="callBackPhoneNumAddon">+38</span>
											<input type="tel" class="form-control" id="callBackPhone" aria-describedby="callBackPhoneNumAddon" placeholder="050 866 22 22" autofocus required>
										</div>
									</div>
								</div>
							</div>
							
							<div id="responseCallBackBody" hidden>
								
								<div class="row">
									<div class="col-md-3" style="text-align: center;">
										<i class="fa fa-check-square-o fa-5x" style="font-size: 50pt; color: lightgreen;" ></i>
									</div>
									<div class="col-md-9">
										<div class="heading-title">
											<h3 style="text-align: center; font-size: 30pt;">Дякуємо!</h1>
											<h4>Ми отримали Ваш запит. Зв'яжемося з вами найближчим часом.</h2>
										</div>
									</div>
								</div>
								
							</div>
						
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Скасувати</button>
							<button type="button" class="btn btn-primary" id="confirmCallBackBtn">Замовити</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		
		
		<!-- Bootstrap core JavaScript
	================================================== -->
		<!-- Placed at the end of the document so the pages load faster -->
		<script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false&amp;language=en"></script>

		<script src="/js/analytics.js"></script>
		
		<script src="/lib/jquery/dist/jquery.js"></script>
		<script src="/lib/gmap3/dist/gmap3.js"></script>
		<script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
		<script src="/lib/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
		
		<script src="/js/script.js"></script>
		<script src="/js/site.js"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
