<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
		<meta name="description" content="dodolan manuk responsive catalog themes built with twitter bootstrap">
		<meta name="keywords" content="responsive, catalog, cart, themes, twitter bootstrap, bootstrap">
		<meta name="author" content="afriq yasin ramadhan">
		<link rel="shortcut icon" href="/images/favicon.png">

		<title>@ViewData["Title"] - Sheva Stream</title>

		<!-- Bootstrap core CSS -->
		<link href="/css/bootstrap.css" rel="stylesheet">

		<!-- Custom styles for this template -->
		<link href="/css/style.css" rel="stylesheet">
		<link href="/css/responsive.css" rel="stylesheet">

		@RenderSection("styles", required: false)

		@Html.ApplicationInsightsJavaScript(TelemetryConfiguration)

		<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		  <script src="js/html5shiv.js"></script>
		  <script src="js/respond.min.js"></script>
		<![endif]-->
	</head>
    <body>
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand visible-xs" asp-controller="Home" asp-action="Index">Sheva Stream</a>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav nav-left">
						<li id="Index"><a asp-controller="Home" asp-action="Index">Головна</a></li>
						<li id="Profile"><a asp-controller="Home" asp-action="Profile">Про нас</a></li>
						<li id="Detail"><a asp-controller="Home" asp-action="Detail">Блокнот</a></li>
					</ul>
					<a href="#" class="logo visible-lg visible-md"><img src="/images/logo.jpg" alt="dodolan manuk responsive catalog themes"></a>
					<div id="brand" class="visible-lg visible-md">&nbsp;</div>
					<ul class="nav navbar-nav nav-right">
						<li id="FAQ"><a asp-controller="Home" asp-action="FAQ">Оплата і доставка</a></li>
						<li id="Contact"><a asp-controller="Home" asp-action="Contact">Контакти</a></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Мова <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><a href="#">Укр</a></li>
								<li><a href="#">Рус</a></li>
							</ul>
						</li>
					</ul>

				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>

		@RenderSection("heading", required: false)

		@RenderBody()
       
		<!-- begin:footer -->
		<div id="footer">
			<div class="container">
				<div class="row">
					
					<div class="col-md-3">
						<a asp-controller="Home" asp-action="FAQ" class="btn btn-success btn-block">Оплата та доставка</a>
						<br>
						<span><i class="fa fa-clock-o"></i> 8:00 – 20:00</span>
					</div>
					
					<div class="col-md-6">
						<h3>SHEVA STREAM</h3>

						<ul class="list-unstyled social-icon">
							<li><a href="https://www.facebook.com/shevastream" rel="tooltip" title="Facebook" class="icon-facebook"><span><i class="fa fa-facebook-square"></i></span></a></li>
							<li><a href="https://vk.com/shevastream" rel="tooltip" title="VK" class="icon-vk"><span><i class="fa fa-vk"></i></span></a></li>
							<li><a href="https://www.instagram.com/shevastream/" rel="tooltip" title="Instagram" class="icon-instagram"><span><i class="fa fa-instagram"></i></span></a></li>
						</ul>

						<div class="sitemap">
							<ul>
								<li><a asp-controller="Home" asp-action="Index">Головна</a></li>
								<li><a asp-controller="Home" asp-action="Detail">Блокнот</a></li>
								<li><a asp-controller="Home" asp-action="Contact">Контакти</a></li>
							</ul>
						</div>
					</div>
					<div class="col-md-3">
						<a id="callMeBackBtn" class="btn btn-warning btn-block">Передзвоніть нам</a>
					</div class="col-md-3">
				</div>
			</div>
		</div>
		<!-- end:footer -->
		<!-- begin:copyright -->
		<div id="copyright">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<small>&copy; @Html.DisplayTextFor(model => DateTime.Now.Year) - Polly Team</small>
					</div>
				</div>
			</div>
		</div>
		<!-- end:copyright -->
		<!-- Bootstrap core JavaScript
	================================================== -->
		<!-- Placed at the end of the document so the pages load faster -->
		<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&amp;language=en"></script>
		
		<script src="/js/jquery.js"></script>
		<script src="/js/gmap3.js"></script>
		<script src="/js/bootstrap.js"></script>
		<script src="/js/script.js"></script>
		<script src="/js/site.js"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
